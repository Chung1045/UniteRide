<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <com.chung.a9rushtobus.elements.CustomMainSwitchPreference
        android:iconSpaceReserved="false"
        android:key="pref_theme_follow_system"
        android:widgetLayout="@layout/components_main_switch"
        android:summary="Enable dark mode"
        android:title="Follow System Settings" />

    <com.chung.a9rushtobus.elements.CustomRadioButtonPreference
        android:iconSpaceReserved="false"
        android:key="pref_theme_light_theme"
        android:layout="@layout/components_radio_option"
        android:title="Light Theme"
        android:defaultValue="false"/>

    <com.chung.a9rushtobus.elements.CustomRadioButtonPreference
        android:iconSpaceReserved="false"
        android:key="pref_theme_dark_theme"
        android:layout="@layout/components_radio_option"
        android:title="Dark Theme"
        android:defaultValue="true"/>

</PreferenceScreen>