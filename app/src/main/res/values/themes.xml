<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme._9RushToBus" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="fontFamily">@font/font_general_sans</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme._9RushToBus" parent="Base.Theme._9RushToBus" />

    <style name="Widget.9RushToBus.ProgressIndicator" parent="Widget.Material3.LinearProgressIndicator">
        <item name="indicatorColor">@color/brand_colorPrimary</item>
        <item name="trackColor">@color/brand_colorOnSurface</item>
    </style>

    <style name="Widget.9RushToBus.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/brand_colorSurfaceSecondary</item>
        <item name="colorOnSurfaceVariant">@color/brand_colorPrimary</item>
    </style>

</resources>