<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/item_bus_route_info_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_bus_route_entry"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRouteBusSpecialIndicator"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="SPECIAL"
                android:textAlignment="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvRouteName"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="83K"
                android:textAlignment="center"
                android:textSize="24sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRouteBusCompany"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="KMB"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvRouteDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="TO SHA TIN CENTRAL"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvRouteOrigin"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="WONG NAI TAU"
                android:textSize="12sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvRouteId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>